<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nail_skill_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:elevation="10dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/nail_skill_image_view"
            android:layout_width="244dp"
            android:layout_height="228dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/nail_skill_name"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/nail_skill_image_view"
            android:text="Nail Skill Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:fontFamily="sans-serif-smallcaps" />

        <TextView
            android:id="@+id/nail_skill_description"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nail_skill_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/nail_skill_image_view"
            android:text="Nail Description"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>