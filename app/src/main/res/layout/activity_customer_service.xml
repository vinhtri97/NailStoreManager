<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerActivities.ServiceActivity"
    android:id="@+id/customer_service_fragment_relative_layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:id="@+id/customerServiceLabel"
        android:text="SERVICE"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewCustomerService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerServiceLabel">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>